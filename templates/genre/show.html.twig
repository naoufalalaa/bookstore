{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
<div align="center">
    <table align="left" class="uk-pading-top">
        <tr>
            <td>
                <a class="uk-button uk-button-secondary uk-padding-medium uk-margin-bottom" href="{{ path('genre_index') }}"><</a>
            </td>
            <td>
                <h1>Genre</h1>
            </td>
        </tr>
    </table>

    <table align="center" class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ genre.nom }}</td>
            </tr>
        </tbody>
    </table>

{% if app.user %}

    <table class="uk-width-1-2@s">
        <tr align="center">
            <td>
                <a class="uk-button uk-button-primary" href="{{ path('genre_edit', {'id': genre.id}) }}"><i class="fas fa-edit"></i> Edit</a>
            </td>
            <td>
                {{ include('genre/_delete_form.html.twig') }}
            </td>
        </tr>
    </table>
    
{% endif %}
</div>
{% endblock %}
