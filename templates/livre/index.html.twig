{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
<nav class="uk-navbar-container" uk-navbar="offset:0;mode:click">
        
        <div class="uk-navbar-center uk-padding-small">
            <a href="{{path('home')}}"><img src={{asset('assets/img/books.png')}} width="50px"/>&nbsp;&nbsp;<strong>BOOKSTORE</strong></a>
        </div>
        <div class="uk-navbar-right uk-margin-large-right">
            <ul class="uk-navbar-nav">
            {% if not app.user %}
                <li><a href={{path('app_login')}}><i class="fas fa-user-friends"></i> Login</a></li>
                <li><a href={{path('app_register')}}><i class="fas fa-sign-in"></i> Sign in</a></li>
            {% endif %}
            {% if app.user %}
                <li><a href={{path('app_logout')}}><i class="fas fa-sign-out-alt"></i> LogOut</a></li>
            {% endif %}
            </ul>
        </div>
    </nav>
<svg xmlns="http://www.w3.org/2000/svg" class="header" viewBox="0 0 1440 320"><path fill="#f3f4f5" fill-opacity="1" d="M0,192L48,170.7C96,149,192,107,288,80C384,53,480,43,576,32C672,21,768,11,864,16C960,21,1056,43,1152,90.7C1248,139,1344,213,1392,250.7L1440,288L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>
<div class="container front">

    <h1>Livre index</h1>
    {% for message in app.flashes('Success') %}
        <div class="uk-alert uk-alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('Warning') %}
        <div class="uk-alert uk-alert-warning">
            {{ message }}
        </div>
    {% endfor %}
    <table class="uk-table">
        <thead>
            <tr>
                <th>Isbn</th>
                <th>Titre</th>
                <th>Auteurs</th>
                <th>Genres</th>
                <th>Nombre de pages</th>
                <th>Date de parution</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.isbn }}</td>
                <td>{{ livre.titre }}</td>
                <td>
                    <ul>
                        {% for auteur in livre.auteurs%}
                            <li>{{ auteur }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                        {% for genre in livre.genres%}
                            <li>{{ genre }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>{{ livre.nombrePages }} pages</td>
                <td>{{ livre.dateDeParution ? livre.dateDeParution|date('d-m-Y') : '' }}</td>
                <td style="color:{% if livre.note>17 %}green{% endif %}{% if livre.note>14 and livre.note<=17 %}black{% endif %}{% if livre.note>=10 and livre.note<=14 %}orange{% endif %}{% if livre.note<10 %}red{% endif %}">{{ livre.note }} / 20</td>

                <td>
                    <a href="{{ path('livre_show', {'id': livre.id}) }}" class="uk-button uk-button-default"><i class="fas fa-eye"></i> Show</a>
                {% if app.user and app.user.roles[0]=="ROLE_ADMIN"  %}
                        <a href="{{ path('livre_edit', {'id': livre.id}) }}" class="uk-button uk-button-primary"><i class="fas fa-edit"></i> Edit</a>
                    {% endif %}
                </td>


            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if app.user and app.user.roles[0]=="ROLE_ADMIN"  %}
    <a href="{{ path('livre_new') }}" class="uk-button uk-button-secondary"><i class="fas fa-plus-square"></i> Create new</a>
{% endif %}

</div>
{% endblock %}
