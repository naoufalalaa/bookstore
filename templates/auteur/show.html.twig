{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <table class="uk-pading-top">
        <tr>
            <td>
                <a class="uk-button uk-button-secondary uk-padding-medium uk-margin-bottom" href="{{ path('auteur_index') }}"><</a>
            </td>
            <td>
                <h1>Auteur</h1>
            </td>
        </tr>
    </table>
    <table class="uk-table uk-width-1-2@s">
        <tbody>
            <tr>
                <th>Nom_prenom</th>
                <td>{{ auteur.nomPrenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ auteur.sexe }}</td>
            </tr>
            <tr>
                <th>Date_de_naissance</th>
                <td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationalite</th>
                <td>{{ auteur.nationalite }}</td>
            </tr>
        </tbody>
    </table>

    <table class="uk-width-1-2@s">
        <tr align="center">
            <td>
                <a class="uk-button uk-button-primary" href="{{ path('auteur_edit', {'id': auteur.id}) }}"><i class="fas fa-edit"></i> Edit</a>
            </td>
            <td>
                {{ include('auteur/_delete_form.html.twig') }}
            </td>
        </tr>
    </table>


{% endblock %}
