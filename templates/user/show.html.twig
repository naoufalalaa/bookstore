{% extends 'navbar.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <h1>User</h1>

    <table class="uk-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.roles %}
                        {% if role == "ROLE_ADMIN" %}
                            Administarteur
                        {% endif %}
                        {% if role == "ROLE_USER" %}
                            Utilisateur
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
            
        </tbody>
    </table>

    <a class="uk-button uk-button-secondary" href="{{ path('user_index') }}"><</a>

    <a class="uk-button uk-button-primary" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
